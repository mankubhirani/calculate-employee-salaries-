generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     Role // 'HR', 'Admin', 'Employee'
  employee Employee?
}

model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  basicSalary Float
  hra         Float
  allowance   Float
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id])
  attendance  Attendance[]
  salary      Salary[]
}

model Attendance {
  id          Int      @id @default(autoincrement())
  employee    Employee @relation(fields: [employeeId], references: [id])
  employeeId  Int
  date        DateTime
  hoursWorked Float
}

model Salary {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  month      String
  gross      Float
  tax        Float
  pf         Float
  net        Float
  deductions Float
}

model Payroll {
  id    Int    @id @default(autoincrement())
  month String
  total Float
}

enum Role {
  HR
  Admin
  Employee
}
